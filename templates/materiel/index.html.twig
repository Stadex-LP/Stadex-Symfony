{% extends 'base.html.twig' %}

{% block title %}Matériels{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Matériels</h1>
        <div class="container p-0 m-0">
            <div class="row justify-content-end p-0 m-0">
                <div class="col-auto me-0 pe-0">
                    <a class="btn btn-secondary" href="{{ path('app_materiel_index', {export: "csv"}) }}"><i class="bi bi-download"></i> CSV</a>
                    <a class="btn btn-success" href="{{ path('app_materiel_new') }}">Nouveau</a>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Libelle</th>
                <th scope="col">Prix Unitaire</th>
                <th scope="col">Prêt Par Jour</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                <td>{{ materiel.id }}</td>
                <td>{{ materiel.libelle }}</td>
                <td>{{ materiel.prixUnitaire }}</td>
                <td>{{ materiel.estParJour ? 'Oui' : 'Non' }}</td>
                <td>
                    <a class="btn btn-outline-primary"
                       href="{{ path('app_materiel_show', {'id': materiel.id}) }}">Afficher</a>
                    <a class="btn btn-outline-warning"
                       href="{{ path('app_materiel_edit', {'id': materiel.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun Matériel</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

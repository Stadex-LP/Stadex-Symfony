{% extends 'base.html.twig' %}

{% block title %}Organisateurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Organisateurs</h1>
        <div class="container p-0 m-0">
            <div class="row justify-content-end p-0 m-0">
                <div class="col-auto me-0 pe-0">
                    <a class="btn btn-success" href="{{ path('app_organisateur_new') }}">Nouveau</a>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Service demandeur</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for organisateur in organisateurs %}
            <tr>
                <td>{{ organisateur.id }}</td>
                <td>{{ organisateur.nom }}</td>
                <td>{{ organisateur.serviceDemandeur }}</td>
                <td>
                    <a class="btn btn-outline-primary"
                       href="{{ path('app_organisateur_show', {'id': organisateur.id}) }}">Afficher</a>
                    <a class="btn btn-outline-warning"
                       href="{{ path('app_organisateur_edit', {'id': organisateur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Équipements Sportif / Afficher{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Équipements Sportif / Afficher</h1>
    </div>


    <div class="container">
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ equipement_sportif.libelle }}</h5>
                    </div>
                    <div class="container">
                        <div class="row mb-1">
                            <div class="col">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <b>ID</b> : {{ equipement_sportif.id }}</li>
                                    <li class="list-group-item">
                                        <b>Code Planitec</b> : {{ equipement_sportif.codePlanitec }}</li>
                                </ul>
                            </div>
                            <div class="col">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><b>Prix Horaire</b> : {{ equipement_sportif.prixHoraire }}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-warning"
                           href="{{ path('app_equipement_sportif_edit', {'id': equipement_sportif.id}) }}">Modifier</a>
                        {{ include('equipement_sportif/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

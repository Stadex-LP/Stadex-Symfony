{% extends 'base.html.twig' %}

{% block title %}Main D'Oeuvres{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Main D'Oeuvres</h1>
        <div class="container p-0 m-0">
            <div class="row justify-content-end p-0 m-0">
                <div class="col-auto me-0 pe-0">
                    <a class="btn btn-secondary" href=""><i class="bi bi-download"></i> CSV</a>
                    <a class="btn btn-success" href="{{ path('app_main_oeuvre_new') }}">Nouveau</a>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Categorie</th>
            <th scope="col">Prix Horaire</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for main_oeuvre in main_oeuvres %}
            <tr>
                <td>{{ main_oeuvre.id }}</td>
                <td>{{ main_oeuvre.categorie }}</td>
                <td>{{ main_oeuvre.prixHoraire }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_main_oeuvre_show', {'id': main_oeuvre.id}) }}">Afficher</a>
                    <a class="btn btn-outline-warning" href="{{ path('app_main_oeuvre_edit', {'id': main_oeuvre.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune Main D'Oeuvre</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}